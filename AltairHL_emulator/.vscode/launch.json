    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "build",
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/build/AltairHL_emulator",
            "args": [
                "-t",
                "-h",
                "test.mosquitto.org",
                "-A",
                "mosquitto.org.crt",
                "-p",
                "8884",
                "-K",
                "client.key",
                "-c",
                "client.crt",
                "-u",
                "rw",
                "-w",
                "readwrite",
                "-i",
                "gloveboxes"
            ],
            "cwd": "${workspaceFolder}"            
        }
    ]
}